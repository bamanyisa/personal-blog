---
import { Icon } from 'astro-icon/components'
import Link from "./ui/Link.astro";
import { navigation } from "../lib/ constants";
---

<header class="flex-none mx-auto max-w-7xl py-6 bg-neutral-950 top-0">
  <div class="max-w-4xl mx-auto border-b border-zinc-50 pb-4">
    <div>Vien Bamanyisa</div>
    <div
      class="flex justify-between items-center w-full mt-2 flex-col-reverse md:flex-row"
    >
      <nav>
        <ul class="flex items-center justify-center space-x-6">
          {
            navigation.map((item) => (
              <li>
                <Link href={item.href}>{item.name}</Link>
              </li>
            ))
          }
          <li>
            <Link
              rel="noreferrer"
              target="_blank"
              href="https://brocksbytes.com"
            >
              {"Newsletter"}
            </Link>
          </li>
        </ul>
      </nav>
      <div class="flex items-center justify-center space-x-3 mb-4 md:m-0">
    <Link
        href="https://x.com/vienbamanyisa"
        rel="noreferrer"
        target="_blank"
        className="border-none"
      >
        <Icon name="ri:twitter-fill" class="h-5 w-5" />
      </Link>
      <Link
        href="https://github.com/bamanyisa"
        rel="noreferrer"
        target="_blank"
        className="border-none"
      >
        <Icon name="ri:github-fill" class="h-5 w-5" />
      </Link>
      <Link
        href="https://discordapp.com/users/bamanyisa"
        rel="noreferrer"
        target="_blank"
        className="border-none"
      >
        <Icon name="ri:discord-fill" class="h-5 w-5" />
      </Link>
      <Link
        href="https://linkedin.com/in/bamanyisa"
        rel="noreferrer"
        target="_blank"
        className="border-none"
      >
        <Icon name="ri:linkedin-fill" class="h-5 w-5" />
      </Link>
      </div>
    </div>
  </div>
</header>
